<%= render "header" %>

<div class="page-label">
    <h1>All Books</h1>
    <%= link_to "Add a Book",  new_book_path, class: "btn btn-primary"%>
</div>

<div class="row book-list">
    <% @books.each do |book| %>
        <div class="col-sm">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><%= book.title %></h5>
                    <p class="card-text"><%= book.author %></p>
                    <%= link_to "View",  book_path(book.id), class: "btn btn-secondary" %>
                    <%= link_to "Edit",  edit_book_path(book.id), class: "btn btn-secondary" %>
                    <%= link_to book_path(book.id), class: "btn btn-secondary", method: :delete, data: {
                                                confirm: "Are you sure?"
                                                } do %>
                        <i class="bi bi-trash-fill"></i>
                    <% end %>
                </div>
            </div>
        </div>
    <% end %>
</div>
