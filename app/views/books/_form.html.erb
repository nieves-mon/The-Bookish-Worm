<%= form_with model: @book, class: "book-form" do |form| %>
  <div class="mb-3">
    <%= form.label :title, class: "form-label" %><br>
    <%= form.text_field :title, class: "form-control" %>
    <% book.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= form.label :author, class: "form-label" %><br>
    <%= form.text_field :author, class: "form-control" %>
    <% book.errors.full_messages_for(:author).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="mb-3 row g-3 align-items-center">
    <div class="col-auto">
      <%= form.label :status, class: "col-form-label" %><br>
      <%= form.select :status, [["To Be Read", "tbr"], ["Currently Reading", "reading"], ["Read", "read"]] %>
      <% book.errors.full_messages_for(:status).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  </div>

  <div class="mb-3 row g-3 align-items-center">
    <div class="col-auto">
      <%= form.label :rating, class: "col-form-label" %><br>
    </div>

    <div class="col-auto">
      <%= form.select :rating, [["Select", nil], ["1/5", 1], ["2/5", 2], ["3/5", 3], ["4/5", 4], ["5/5", 5]] %>
    </div>

    <div class="col-auto">
      <% book.errors.full_messages_for(:rating).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :cover_url, class: "form-label" %><br>
    <%= form.text_field :cover_url, class: "form-control" %>
    <% book.errors.full_messages_for(:cover_url).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit btn_label, class: "btn btn-primary" %>
  </div>
<% end %>
